= render "shared/second-header"
.transaction-contents
  .transaction-main
    %h1.transaction-title-text
      購入内容の確認
    .buy-item-info
      = image_tag "item-sample.png", class: 'buy-item-img'
      .buy-item-right-content
        %h2.buy-item-text
          = "商品説明"
        .buy-item-price
          %p.item-price-text
            ¥#{999,999,999}
          %p.item-price-sub-text （税込）送料込み
    .item-payment
      %h1.item-payment-title
        支払金額
      %p.item-payment-price
        ¥#{"販売価格"}
    = form_with id: 'charge-form', class: 'transaction-form-wrap',local: true do |f|
      .credit-card-form
        %h1.info-input-haedline
          クレジットカード情報入力
        .form-group
          .form-text-wrap
            %label.form-text カード情報
            %span.indispensable 必須
          = f.text_field 'hoge', class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16"
          .available-card
            = image_tag 'card-visa.gif', class: 'card-logo'
            = image_tag 'card-mastercard.gif', class: 'card-logo'
            = image_tag 'card-jcb.gif', class: 'card-logo'
            = image_tag 'card-amex.gif', class: 'card-logo'
        .form-group
          .form-text-wrap
            %label.form-text 有効期限
            %span.indispensable 必須
          .input-expiration-date-wrap
            = f.text_area 'hoge', class:"input-expiration-date", placeholder:"例)3"
            %p 月
            = f.text_area 'hoge', class:"input-expiration-date", placeholder:"例)23"
            %p 年
        .form-group
          .form-text-wrap
            %label.form-text セキュリティコード
            %span.indispensable 必須
          = f.text_field "hoge",class:"input-default", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4"
      .shipping-address-form
        %h1.info-input-haedline
          配送先入力
        .form-group
          .form-text-wrap
            %label.form-text 郵便番号
            %span.indispensable 必須
          = f.text_field 'hoge', class:"input-default", placeholder:"例）123-4567", maxlength:"8"
        .form-group
          .form-text-wrap
            %label.form-text 都道府県
            %span.indispensable 必須
          = f.collection_select(:hoge, [], :hoge, :hoge, {}, {class:"select-box"})
        .form-group
          .form-text-wrap
            %label.form-text 市区町村
            %span.indispensable 必須
          = f.text_field 'hoge', class:"input-default", placeholder:"例）横浜市緑区"
        .form-group
          .form-text-wrap
            %label.form-text 番地
            %span.indispensable 必須
          = f.text_field 'hoge', class:"input-default", placeholder:"例）青山1-1-1"
        .form-group
          .form-text-wrap
            %label.form-text 建物名
            %span.form-any 任意
          = f.text_field 'hoge', class:"input-default", placeholder:"例）柳ビル103"
        .form-group
          .form-text-wrap
            %label.form-text 電話番号
            %span.indispensable 必須
          = f.text_field 'hoge', class:"input-default", placeholder:"例）09012345678",maxlength:"11"
      .buy-btn
        = f.submit "購入" ,class:"buy-red-btn"
= render "shared/second-footer"
